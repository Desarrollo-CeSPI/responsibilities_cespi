<%= simple_form_for @category, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :min_value %>
  <%= f.input :max_value %>
  <div class="form-actions">
    <%= link_to t('views.scaffold.back_html'), categories_path, class: 'btn secondary' %>
    <%= f.button :submit, class: 'btn primary' %>
  </div>
<% end %>
