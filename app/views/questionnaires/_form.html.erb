<%= simple_form_for @questionnaire, html: { class: 'form-horizontal' } do |f| %>
    <%= f.error_notification %> 
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :date_from, as: :ui_date_picker %>
    <%= f.input :date_to, as: :ui_date_picker %>

    <%= f.label :question_tokens %>
    <%= f.text_field :question_tokens, "data-pre" => @questionnaire.questions.all.to_json(:only => [:id, :name_and_type], :methods => [:name_and_type])  %>

  </div>

  
<p>
</p>

  <div class="form-actions">
      <%= link_to t('views.scaffold.back_html'), questionnaires_path, class: 'btn secondary' %>
      <%= f.button :submit, class: 'btn btn-primary' %>
  </div>

<% end %>

